#include <iostream>


using namespace std;

bool check_Elenushka(char*word)

{
	
	int k = strlen(word);
	for (int i = 0; i < k / 2; ++i)
	{
		if (word[i] != word[k - i - 1])
		{
			return false;
		}
	}
	return true;
}

int main()
{
	char* s = new char[40];
	cout << "VVedite slovo:";
	cin >> s;
	if (check_Elenushka(s))
	{
		cout << "polindrom.";
	}
	else
	{
		cout << "ne polindrom";
	}
	return 0;
}
